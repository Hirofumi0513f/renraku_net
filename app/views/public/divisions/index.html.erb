<div class="container">
  <p id="notice"></p>
  <div class="row mx-auto">
    <h4 class="text-center">課名一覧</h4>
  </div>
  <div class="row mt-2 mx-auto">
    <% @divisions.each do |division| %>
    <div class="col-sm-12 col-md-6 col-lg-4 mb-2">
      <div class="card">
        <div class="card-body">
            <%= link_to edit_public_division_path(division.id) do %>
              <%= division.name %>
            <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row mt-3">
    <!--↓ページネーションを表示させるための記述-->
    <%= paginate @divisions %>
  </div>
  <div class="row mt-2">
    <!--課名の追加欄を作成-->
    <h5>課名追加</h5>
  </div>
  <div class="row">
    <%= form_with model: @division, url:public_divisions_path,local:true do |f| %>
      <!--新規登録が失敗した際のエラーメッセージの表示記述-->
      <!--errors:モデルにバリデーションをかけた際にエラーの内容を確認できるメソッド。any?と組み合わせることで、エラーが発生しているかを判定できる-->
      <!--部分テンプレートでのエラーメッセージ表示確認-->
      <!--詳細は「app/view/layout/_error_messages.html.erb」参照-->
      <%= render 'layouts/error_messages', model: f.object %>
      &emsp;&emsp;&emsp;
      <%= f.text_field :name,placeholder:"課名" %>
      &emsp;&emsp;&emsp;
        <%= f.submit "新規登録",class:'btn btn-success' %>
    <% end %>
  </div>
</div>